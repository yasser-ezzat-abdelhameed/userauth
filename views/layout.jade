doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/main.css')
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') User Authentication
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li(class=(title === 'Home')? 'active' : '')
              a(href='/') Home
            li(class=(title === 'Members') ? 'active' : '')
              a(href='/members') Members
            li(class=(title === 'About')? 'active' : '')
              a(href='') About
            li(class=(title === 'Contact')? 'active' : '')
              a(href='') Contact
            li(class=(title === 'Register') ? 'active' : '')
              a(href='/users/register') Register
            li(class=(title === 'Login') ? 'active' : '')
              a(href='/users/login') Login


    .container
      block content
    script(href='/javascripts/jquery.min.js')
    script(href='/javascripts/bootstrap.min.js')
